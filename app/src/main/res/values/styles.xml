<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/secondaryColor</item>
    </style>

    <style name="NewBoardTextNumbers" parent="TextAppearance.AppCompat.Caption">
        <item name="android:layout_width">@dimen/text_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:letterSpacing">.1</item>
        <item name="android:textColor">@color/secondaryTextColor</item>
        <item name="android:layout_marginStart">@dimen/horizontal_margin</item>
        <item name="android:layout_marginEnd">@dimen/horizontal_margin</item>
        <item name="android:layout_marginTop">@dimen/vertical_margin</item>
        <item name="android:layout_marginBottom">@dimen/vertical_margin</item>
    </style>

    <style name="NewBoardTextLabel" parent="TextAppearance.AppCompat.Caption">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/secondaryDarkColor</item>
        <item name="android:layout_marginStart">@dimen/horizontal_margin</item>
        <item name="android:layout_marginEnd">@dimen/horizontal_margin</item>
        <item name="android:layout_marginTop">@dimen/vertical_margin</item>
        <item name="android:layout_marginBottom">@dimen/vertical_margin_related</item>
    </style>

    <style name="GridText" parent="TextAppearance.AppCompat.Caption">
        <item name="android:padding">@dimen/grid_item_padding</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/roboto_black</item>
        <item name="android:textSize">@dimen/grid_text_size</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/secondaryTextColor</item>
    </style>

    <style name="BoardIndicatorText" parent="TextAppearance.AppCompat.Caption">
        <item name="android:layout_marginTop">@dimen/vertical_margin</item>
        <item name="android:layout_marginBottom">@dimen/vertical_margin</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">@dimen/indicators_text_size</item>
        <item name="android:textColor">@color/secondaryTextColor</item>
    </style>

    <style name="ImageButtonStyle" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:background">@drawable/image_button_background</item>
        <item name="android:paddingTop">@dimen/image_button_vertical_padding</item>
        <item name="android:paddingBottom">@dimen/image_button_vertical_padding</item>
        <item name="android:paddingStart">@dimen/image_button_horizontal_padding</item>
        <item name="android:paddingEnd">@dimen/image_button_horizontal_padding</item>
    </style>

    <style name="ButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/image_button_background</item>
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:layout_marginStart">@dimen/horizontal_margin_borders_wide</item>
        <item name="android:layout_marginEnd">@dimen/horizontal_margin_borders_wide</item>
        <item name="android:paddingTop">@dimen/button_vertical_padding</item>
        <item name="android:paddingBottom">@dimen/button_vertical_padding</item>
        <item name="android:paddingStart">@dimen/button_horizontal_padding</item>
        <item name="android:paddingEnd">@dimen/button_horizontal_padding</item>
    </style>

    <style name="TitleDialog" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dialog_title_height</item>
        <item name="android:layout_marginStart">@dimen/dialog_margin_horizontal</item>
        <item name="android:layout_marginEnd">@dimen/dialog_margin_horizontal</item>
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <style name="TextDialog" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/dialog_margin_horizontal</item>
        <item name="android:layout_marginEnd">@dimen/dialog_margin_horizontal</item>
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <style name="ButtonDialog" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Button</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/dialog_margin_button</item>
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <style name="AboutTitle" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:letterSpacing">.1</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/secondaryTextColor</item>
        <item name="android:layout_marginStart">@dimen/horizontal_margin_borders_wide</item>
        <item name="android:layout_marginEnd">@dimen/horizontal_margin_borders_wide</item>
        <item name="android:layout_marginTop">@dimen/vertical_margin_section</item>
        <item name="android:layout_marginBottom">@dimen/vertical_margin_related</item>
    </style>

    <style name="AboutSection" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textColorLink">@color/primaryLightColor</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textColor">@color/secondaryTextColor</item>
        <item name="android:layout_marginStart">@dimen/horizontal_margin_borders_wide</item>
        <item name="android:layout_marginEnd">@dimen/horizontal_margin_borders_wide</item>
        <item name="android:layout_marginTop">@dimen/vertical_margin</item>
        <item name="android:layout_marginBottom">@dimen/vertical_margin_related</item>
    </style>

    <style name="AboutSubtitle" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textSize">20sp</item>
        <item name="android:textColorLink">@color/primaryLightColor</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textColor">@color/secondaryTextColor</item>
        <item name="android:layout_marginStart">@dimen/horizontal_margin_borders_wide</item>
        <item name="android:layout_marginEnd">@dimen/horizontal_margin</item>
        <item name="android:layout_marginTop">@dimen/vertical_margin</item>
        <item name="android:layout_marginBottom">@dimen/vertical_margin_related</item>
    </style>

    <style name="AboutBody" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColorLink">@color/primaryLightColor</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textColor">@color/secondaryTextColor</item>
        <item name="android:layout_marginStart">@dimen/horizontal_margin_borders_wide</item>
        <item name="android:layout_marginEnd">@dimen/horizontal_margin_borders_wide</item>
        <item name="android:layout_marginTop">@dimen/vertical_margin_related</item>
        <item name="android:layout_marginBottom">@dimen/vertical_margin_related</item>
    </style>

    <style name="AboutLink" parent="AboutBody">
        <item name="android:textColorLink">@color/primaryLightColor</item>
        <item name="android:textColor">@color/primaryLightColor</item>
        <item name="android:paddingTop">@dimen/horizontal_padding</item>
        <item name="android:paddingEnd">@dimen/horizontal_padding</item>
        <item name="android:paddingBottom">@dimen/horizontal_padding</item>
    </style>

</resources>
